<tr class="line-item">
  <td class="quantity"><%= line_item.quantity %></td>
  <td class="product-title"><%= line_item.product.title %></td>
  <td class="price"><%= number_to_currency(line_item.total_price) %></td>
  <td>
    <%= button_to 'remove', line_item,
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
